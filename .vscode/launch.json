{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Docker",
            "preLaunchTask": "tsc-watch",
            "protocol": "auto",
            "address": "localhost",
            "port": 9229,
            "restart": true,
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/code/",
            "sourceMapPathOverrides": {
                "/code/*": "${workspaceFolder}/*"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug TypeScript File",
            "autoAttachChildProcesses": true,
            "internalConsoleOptions": "openOnSessionStart",
            "console": "integratedTerminal",
            "smartStep": true,
            "showAsyncStacks": true,
            "cwd": "${workspaceFolder}",
            "runtimeArgs": [
                "--require",
                "ts-node/register"
            ],
            "args": [
                "${file}"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug NodeJS File",
            "autoAttachChildProcesses": true,
            "internalConsoleOptions": "openOnSessionStart",
            "console": "integratedTerminal",
            "smartStep": true,
            "showAsyncStacks": true,
            "cwd": "${workspaceFolder}",
            "args": [
                "${file}"
            ]
        }
    ]
}
