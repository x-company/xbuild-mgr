    ],
    "scripts": {
        "lint": "tslint -c ./tslint.json './src/**/*.ts'",
        "prebuild": "yarn lint",
        "build:clean": "rimraf -rf lib && mkdir lib ",
        "build": "tsc -p ./src/tsconfig.json",
        "postbuild": "appvmgr update build",
        "watch": "tsc -w -p ./src/tsconfig.json",
        "test": "yarn test:xinit && yarn test:xbuild",
        "test:xinit": "docker-compose -f ./tests/unit/xinit/docker-compose.yml up",
        "test:xbuild": "docker-compose -f ./tests/unit/xbuild/docker-compose.yml up",
        "debug": "docker-compose -f ./tests/integration/xinit/docker-compose.yml up"
    },
