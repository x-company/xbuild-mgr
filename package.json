{
    "name": "xinit",
    "version": "0.1.0",
    "description": "",
    "main": "./lib/index.js",
    "typings": "./lib/index.d.ts",
    "bin": {
        "xinit": "./bin/xinit"
    },
    "engines": {
        "node": ">=8.0.0"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:x-company/xinit.git"
    },
    "bugs": {
        "url": "https://github.com/x-company/xinit/issues"
    },
    "homepage": "https://github.com/x-company/xinit",
    "author": "Roland Breitschaft <info@x-company.de> (https://www.x-company.de)",
    "license": "MIT",
    "keywords": [
        "docker",
        "init",
        "runit"
    ],
    "config": {
        "image_name": "xcompany/xinit",
        "repo_user": "rolbre"
    },
    "scripts": {
        "lint": "tslint -c ./tslint.json './src/**/*.ts'",
        "prebuild": "yarn lint && rimraf -rf lib && mkdir lib && appvmgr update build",
        "build": "tsc -p ./src/tsconfig.json",
        "postbuild": "git add . && git commit -m 'Automatic Build Commit'",
        "prepublish": "yarn build && appvmgr add-git-tag && git push --tags && git push --all",
        "watch": "tsc -w -p ./src/tsconfig.json",
        "test": "docker-compose -f ./tests/unit/docker-compose.yml up",
        "test:clean": "docker container prune -f && docker image rm -f xinit:unit"
    },
    "devDependencies": {
        "@types/chai": "^4.1.7",
        "@types/configstore": "^4.0.0",
        "@types/find-root": "^1.1.1",
